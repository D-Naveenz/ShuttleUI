<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
	<TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
	<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
	<SupportedOSPlatformVersion>10.0.19041.0</SupportedOSPlatformVersion>
	<RootNamespace>ShuttleUI</RootNamespace>
	<RuntimeIdentifiers>win-x86;win-x64;win-arm64</RuntimeIdentifiers>
	<UseWinUI>true</UseWinUI>
	<ImplicitUsings>enable</ImplicitUsings>
	<Nullable>enable</Nullable>
	<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<Title>Shuttle UI</Title>
  </PropertyGroup>
  <ItemGroup>
	<Page Remove="Controls\SettingsCard\SettingsCard.xaml" />
  </ItemGroup>

  <ItemGroup>
	  <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.5.240404000" />
	  <PackageReference Include="CommunityToolkit.WinUI.UI.Controls" Version="7.1.2" />
	  <PackageReference Include="Microsoft.Xaml.Behaviors.WinUI.Managed" Version="2.0.9" />
	  <PackageReference Include="MimeMapping" Version="3.0.1" />
  </ItemGroup>

  <ItemGroup>
	<None Update="Controls\MediaBackgroundPanel\MediaBackgroundPanel.xaml">
	  <Generator>MSBuild:Compile</Generator>
	</None>
	<None Update="Controls\SettingsCard\SettingsCard.xaml">
	  <Generator>MSBuild:Compile</Generator>
	</None>
  </ItemGroup>
</Project>
